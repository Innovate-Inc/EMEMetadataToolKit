                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <Image Style="{DynamicResource AddImageStyle}" Source="../Icons/GenericAddGreen16.png"/>
                                    <TextBlock Style="{DynamicResource ButtonTextStyle}" Text="{x:Static r:Resources.BTN_KEY_NEW_THEME}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Border>

            <Border Style="{DynamicResource EditorBorder2Style}">
                <StackPanel>
                    <Border Height="30" Padding="0" Background="#4E87D4">
                        <Label VerticalAlignment="Center" Foreground="White" Content="Place Keywords"/>
                    </Border>
                    <Label VerticalAlignment="Center" Content="lbxEpaPlaceK | chbxEpaPlacekey"/>
                    <ListView x:Name="lbxEpaPlaceK"
                              DataContext="{DynamicResource PlaceData}"
                              ItemsSource = "{Binding}"
                              Template="{StaticResource ListBoxNoScroll}"
                              ItemsPanel="{StaticResource ThreeColumnList}"
                              ItemContainerStyle="{StaticResource ChbxListItem}"
                              SelectionMode="Multiple"
                              Loaded="lbxPlaceK_Loaded"
                              Margin="10,20,10,0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Name="chbxEpaPlacekey" Content="{Binding XPath=placekey}" Checked="chbxXMLPlace_Checked" Unchecked="chbxXMLPlace_Unchecked"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Label VerticalAlignment="Center" Content="lbxMDEpaPlaceK" Height="0" Width="0"/>
                        <Label VerticalAlignment="Center" Content="[ tbxMDEpaPlaceK ]" Height="0" Width="0"/>
                        <ListBox x:Name="lbxMDEpaPlaceK" ItemsSource = "{Binding XPath=/metadata/dataIdInfo/placeKeys}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBox x:Name="tbxMDEpaPlaceK" Text="{e:MetadataBinding XPath=bag}" BorderThickness="0" FontSize="4" Height="0" Width="0"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Name="btnLoadDefaultPlaceK" Content="Defaults" Click="btnLoadDefaultPlaceK_Click" Height="20"  HorizontalAlignment="Right" Margin="5,0"></Button>
                        <Button Name="btnClearPlaceK" Content="Clear" Click="btnClearPlaceK_Click" Height="20" HorizontalAlignment="Right" Margin="5,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{DynamicResource EditorBorder2Style}">
                <StackPanel>
                    <Border Height="30" Padding="0" Background="#4E87D4">
                        <Label VerticalAlignment="Center" Foreground="White" Content="User Keywords"/>
                    </Border>
                    <Label VerticalAlignment="Center" Content="lbxEpaUserK | chbxEpaUserkey"/>
                    <ListView x:Name="lbxEpaUserK"
                              DataContext="{DynamicResource UserData}"
                              ItemsSource = "{Binding}"
                              Template="{StaticResource ListBoxNoScroll}"
                              ItemsPanel="{StaticResource ThreeColumnList}"
                              ItemContainerStyle="{StaticResource ChbxListItem}"
                              SelectionMode="Multiple"
                              Loaded="lbxUserK_Loaded"
                              Margin="10,20,10,0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Name="chbxEpaUserkey" Content="{Binding XPath=themekey}" Checked="chbxEpaUserkey_Checked" Unchecked="chbxEpaUserkey_Unchecked"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Label VerticalAlignment="Center" Content="lbxMDUserThemeK" Height="0" Width="0"/>
                        <Label VerticalAlignment="Center" Content="[ tbxMDUserThemeK ]" Height="0" Width="0"/>
                        <ListBox x:Name="lbxMDUserThemeK">
                            <ListBox.ItemsSource>
                                <Binding XPath="/metadata/dataIdInfo/themeKeys[thesaName/resTitle[contains(. , 'User')]]"/>
                            </ListBox.ItemsSource>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBox x:Name="tbxMDUserThemeK" Text="{e:MetadataBinding XPath=bag}" BorderThickness="0" FontSize="4" Height="0" Width="0"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Name="btnLoadDefaultUserK" Content="Defaults" Click="btnLoadDefaultUserK_Click" Height="20"  HorizontalAlignment="Right" Margin="5,0"></Button>
                        <Button Name="btnClearUserK" Content="Clear" Click="btnClearUserK_Click" Height="20" HorizontalAlignment="Right" Margin="5,0"/>
                    </StackPanel>

                </StackPanel>
            </Border>
            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <StackPanel>
                    <Label Name="labelXMLPath" Content="Bound Directly to Metadata"/>
                    <ListBox x:Name="lvTest" DataContext="{DynamicResource XmlTestData}" SelectionMode="Multiple" Margin="10,20">
                        <ListBox.ItemsSource>
                            <Binding XPath="/metadata/dataIdInfo/themeKeys/keyword"/>
                        </ListBox.ItemsSource>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="testNode" Text="{Binding XPath=..}"/>
                                    <TextBox Name="testKeyword" Text="{Binding XPath=.}"/>
                                    <TextBox Name="testLang" Text="{Binding XPath=../thesaLang/languageCode/@value}"/>
                                    <TextBox Name="testDate" Text="{Binding XPath=../thesaName/date/reviseDate}"/>
                                    <TextBox Name="testThesaurus" Text="{Binding XPath=../thesaName/resTitle}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Label Name="labelXMLTest" Content="Bound Using ESRI XMLRecord"/>
                    <ListBox x:Name="lvXMLTest" SelectionMode="Multiple" Margin="10,20">
                        <ListBox.ItemsSource>
                            <Binding XPath="/metadata/dataIdInfo/themeKeys/keyword"/>
                        </ListBox.ItemsSource>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="testNode" Text="{Binding XPath=..}"/>
                                    <TextBox Name="testKeyword" Text="{Binding XPath=.}"/>
                                    <TextBox Name="testLang" Text="{Binding XPath=../thesaLang/languageCode/@value}"/>
                                    <TextBox Name="testDate" Text="{Binding XPath=../thesaName/date/reviseDate}"/>
                                    <TextBox Name="testThesaurus" Text="{Binding XPath=../thesaName/resTitle}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </StackPanel>
            <!-- validate after all anchors are loaded -->
            <v:PageValidateControl/>

        </StackPanel>
    </Grid>
</corepages:EditorPage>